
//*******************************************************************
// VOWELS
//*******************************************************************


phoneme 3    //  Schwa, used for rhotic schwa in American
  vowel   starttype (@)  endtype (@)
  formants vwl_en_us/3_us
  unstressed
  linkout r-
  length 210
endphoneme


phoneme @    //  Schwa
  vowel   starttype (@)  endtype (@)
  formants vowel/@_4
  unstressed
  before_r 3
  length 130
endphoneme

phoneme @/    //  Schwa, end of word
  vowel   starttype (@)  endtype (@)
  formants vowel/@_low2
  unstressed
  length 130
endphoneme

phoneme @2   //  Schwa, changes to I before a vowel
  vowel  starttype (@)  endtype (@)
  formants vowel/@_low2
  unstressed
  beforevowel I2
  length 120
endphoneme

phoneme @L
  vowel  starttype (@)  endtype l
  length 160
  formants vwl_en/@L
  unstressed
  before _ vwl_en/@L
endphoneme


phoneme a
  vowel  starttype (e)  endtype (@)
  length 210
  formants vwl_en_us/a
  before n vnasal/ee_n2
  before N vnasal/ee_n2
  before m vnasal/ee_n2
  reduceto a2  0
endphoneme


phoneme aa   //   'bath' etc.
  vowel  starttype (a)  endtype (@)
  length 210
  formants vwl_en_us/a
  linkout r-
endphoneme


phoneme a2
  vowel  starttype (@)  endtype (@)
  unstressed
  length 150
  formants vowel/a#_3
  linkout r-
endphoneme


phoneme E
  vowel  starttype (e)  endtype (e)
  length 195
  formants vwl_en_us/ee
  reduceto I2 0
endphoneme


phoneme I
  vowel  starttype (i) endtype (i)
  length 160
  formants vowel/ii_4
  linkout ;
  reduceto I2 0
endphoneme


phoneme I2
  vowel  starttype (i)  endtype (i)
  unstressed
  length 160
  formants vowel/ii#_3
  linkout ;
endphoneme


phoneme i   //  optional variant of [I] for end of words
  vowel  starttype (i)  endtype (i)
  unstressed
  length 170
  formants vowel/ii_final
  linkout ;
endphoneme


phoneme 0
  vowel  starttype (a)   endtype (a)
  length 200
  formants vowel/aa_8
  before r vwl_en_us/oor
  reduceto @  0
endphoneme


phoneme V
  vowel  starttype (a)  endtype (@)
  length 180
  formants vowel/V_6
  reduceto @  0
endphoneme


phoneme U
  vowel  starttype (o)  endtype (o)
  length 145
  formants vowel/8_2
endphoneme


phoneme A:
  vowel  starttype (a)  endtype (a)
  length 210
  formants vowel/aa_8
  before r vwl_en_us/ar
  linkout r-
endphoneme


phoneme A@      // Used for [A:] when followed by 'r', becomes [A:]+[r] in American
  vowel  starttype (a)  endtype (@)
  length 260
  formants vwl_en_us/ar
  appendph r
endphoneme


phoneme 3:
  vowel  starttype (@)  endtype (@)
  length 240
  formants vwl_en_us/3_us2
  linkout r-
endphoneme


phoneme i:
  vowel  starttype (i)  endtype (i)
  length 170
  formants vowel/i_en
  linkout ;
endphoneme


phoneme O:
  vowel  starttype (o)  endtype (o)
  length 210
  formants vowel/0_3
  before r vwl_en_us/oor
  reduceto @  0
endphoneme


phoneme O@
  vowel  starttype (o)  endtype (@)
  length 250
  formants vwl_en_us/oor
//  formants vwl_en_us/or
  appendph r
endphoneme


phoneme o@
  vowel  starttype (o)  endtype (@)
  length 250
  formants vwl_en_us/or
  appendph r
endphoneme


phoneme O
  vowel  starttype (o)  endtype (o)
  length 200
  formants vowel/aa#
  reduceto @  0
endphoneme


phoneme u:
  vowel  starttype (u)  endtype (u)
  length 190
  formants vdiph2/uw
endphoneme


phoneme aU
  vowel  starttype (a)  endtype (o)
  length 235
  formants vdiph/aoo
endphoneme


phoneme oU
  vowel  starttype (@)  endtype (u)
  length 230
  formants vdiph/8u
endphoneme


phoneme aI
  vowel  starttype (a)  endtype (i)
  length 250
  formants vdiph/aae
endphoneme


phoneme eI
  vowel  starttype (e)  endtype (i)
  length 230
  formants vdiph2/ei_4
endphoneme


phoneme OI
  vowel  starttype (o)  endtype (i)
  length 285
  formants vdiph/ooi_4
endphoneme


phoneme e@
  vowel  starttype (e)  endtype (@)
  length 280
  formants vwl_en_us/er
  appendph r
endphoneme


phoneme i@3
  vowel  starttype (i)  endtype (@)
  length 280
  formants vwl_en_us/ir
