
phoneme @
  vowel starttype (@) endtype (@)
  unstressed
  length 130
  formants vowel/@_3
endphoneme

// ToDo: change [@] to [a#] if adjacent to [r] or [R]
phoneme 3
  vowel starttype (a) endtype (a)
  unstressed
  length 130
  formants vowel/a#_3
endphoneme



phoneme i
  vowel starttype (i) endtype (i)
  length 150
  formants vowel/i_4
  linkout ;
endphoneme

