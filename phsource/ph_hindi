// retroflex plosives
//===================

phoneme t.
  vls rfx stop
  vowelin f1=0  f2=1800 -300 300  f3=-400 80
  vowelout f1=0 f2=1800 -300 250  f3=-400 80  rms=20 colr=2
  lengthmod 2
  wave  ustop/t_short
  before _ ustop/t_
  switchvoicing d
endphoneme

phoneme t.h
  vls rfx stop
  vowelin f1=0  f2=1800 -300 300  f3=-400 80
  vowelout f1=0 f2=1800 -300 250  f3=-400 80  rms=20 colr=2
  lengthmod 2
  wave  ustop/t
  before _ ustop/t_
  before r ustop/tr
  switchvoicing d
endphoneme

phoneme d.
  vcd rfx stop
  vowelin f1=1  f2=1800 -300 300  f3=-400 80
  vowelout f1=1 f2=1800 -300 300  f3=-400 80 colr=2
  formants d/d+x/d
  before _ d/d_+x/d_
  before r d/dr+x/d
  after _ NULL
  after @ d/xd
  lengthmod 5
  switchvoicing t
endphoneme

