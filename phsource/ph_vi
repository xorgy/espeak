phoneme kh
  vls vel frc
  vowelin f1=0  f2=2300 200 400  f3=200 80
  vowelout f1=0 f2=2300 300 400  f3=200 80  rms=20
  length 100
  lengthmod 3
  wave ufric/x%50
  switchvoicing Q
endphoneme

phoneme l
  liquid
  length 100
  lengthmod 7
  beforenotvowel l/
  formants l/l_vi
endphoneme

