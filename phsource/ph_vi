phoneme 1   //  tone: level
  stress
  length 11
  tone 28 32 envelope/p_level NULL
endphoneme


phoneme 2   //  tone: low falling
  stress
  length 12
  tone 20  8 envelope/p_fall NULL
endphoneme


phoneme 3   //  tone rising
  stress
  length 13
  tone 28 43 envelope/p_rise NULL
endphoneme


phoneme 4   //  tone curve (dipping rising)
  stress
  length 14
  tone 28  5 envelope/p_fallrise NULL
endphoneme


phoneme 5   //  tone: broken (creaking rising)
  stress
  length 15
  tone 28 45 envelope/vi_5 envelope/vi_5amp
endphoneme


phoneme 6   //  tone drop  (constricted)
  stress
  length 16
  tone 30  5 envelope/vi_6 envelope/vi_6amp
endphoneme


phoneme 7   //  tone 1 at end of clause
  stress
  length 17
  tone 30  20 envelope/p_fall NULL
endphoneme


phoneme 8  // TEST
  stress
  length 18
  tone 30  6 envelope/p_512 NULL
endphoneme

// Vowels
//=======


phoneme a
  vowel starttype (@) endtype (@)
  length 130
  formants vowel/a_4
endphoneme

phoneme a:
  vowel starttype (a) endtype (a)
  length 260
  formants vowel/a_2
endphoneme


phoneme E
  vowel starttype (e) endtype (e)
  length 200
  formants vowel/ee_3
endphoneme

phoneme e
  vowel starttype (e) endtype (e)
  length 200
  formants vowel/e
endphoneme


phoneme i
  vowel  starttype (i)  endtype (i)
  length 190
  formants vowel/i_en
  after w w/wi
  linkout ;
endphoneme


phoneme O
  vowel starttype (o) endtype (o)
  length 200
  formants vowel/aa_4
endphoneme

phoneme o
  vowel starttype (o) endtype (o)
  length 200
  formants vowel/oo_1
endphoneme


phoneme u
  vowel starttype (u) endtype (u)
  length 200
  formants vowel/u_7
endphoneme

phoneme y
  vowel starttype (u) endtype (u)
  length 200
  formants vowel/y#
endphoneme



phoneme @
  vowel  starttype (@)  endtype (a)
  length 130
  formants vowel/a#_3
endphoneme


phoneme @:
  vowel  starttype (@)  endtype (@)
  length 260
  formants vowel/V_3
endphoneme



