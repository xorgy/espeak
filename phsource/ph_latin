

//=========================================================
// Latin
//=========================================================


phoneme a
  vowel starttype (a) endtype (a)
  length 170
  formants vowel/a_5
endphoneme


phoneme E
  vowel starttype (e) endtype (e)
  length 170
  formants vowel/ee_1
endphoneme


phoneme I
  vowel starttype (i) endtype (i)
  length 150
  formants vowel/ii_5
  linkout ;
endphoneme


phoneme O
  vowel starttype (o) endtype (o)
  length 160
  formants vowel/o
endphoneme


phoneme U
  vowel starttype (u) endtype (u)
  length 160
  formants vowel/u
endphoneme


phoneme a:
  vowel starttype (a) endtype (a)
  length 270
  formants vowel/a_3
endphoneme


phoneme e:
  vowel starttype (e) endtype (e)
  length 260
  formants vowel/e
endphoneme


phoneme i:
  vowel starttype (i) endtype (i)
  length 240
  formants vowel/i_2
  after w w/wi2
endphoneme


phoneme o:
  vowel starttype (o) endtype (o)
  length 250
  formants vowel/o_2
endphoneme


phoneme u:
  vowel starttype (u) endtype (u)
  length 250
  formants vowel/u_bck2
endphoneme


phoneme y
  vowel starttype (i) endtype (i)
  length 150
  formants vowel/y
endphoneme

phoneme y:
  vowel starttype (i) endtype (i)
  length 250
  formants vowel/y_2
endphoneme



phoneme aU
  vowel starttype (a) endtype (u)
  length 270
  formants vdiph/aau_2
endphoneme


phoneme aI
  vowel starttype (a) endtype (i)
  length 270
  formants vdiph/ae
endphoneme


phoneme eI
  vowel starttype (e) endtype (i)
  length 270
  formants vdiph/ei
endphoneme


phoneme EU
  vowel starttype (e) endtype (u)
  length 270
  formants vdiph/eeu_2
endphoneme


phoneme OI
  vowel starttype (o) endtype (i)
  length 250
  formants vdiph/oi
endphoneme


//===========
// CONSONANTS
//===========


phoneme p // unaspirated
  vls blb stop
  vowelin  f1=0  f2=1000 -50 -100  f3=-200 80
  vowelout f1=0  f2=1000 -500 -350  f3=-300 80 rms=30
  lengthmod 2
  wave ustop/p_unasp
  before _ ustop/p_unasp_%80
  before r ustop/pr
  before l ustop/pl
  switchvoicing b
endphoneme


// <h> should actually be a modifier of a phoneme, but we use a short /h/ here.
phoneme <h>
  vls glt apr
  length 50
  lengthmod 3
  wave h/h_%70         // no vowel following
  before (@) h/h@
  before (a) h/ha
  before (e) h/he
  before (i) h/hi
  before (o) h/ho
  before (u) h/hu
endphoneme


// Allen, Vox Latina, Chapter 1, Section v
// Use 'dark' l (l/2) at the end of a word or another consonant

phoneme l
  liquid
  length 100
  lengthmod 7
  beforenotvowel l/2
  formants l/l
  after _  l/_l
  after t  l/tl
  after l/ l/l_long    // double l, make it longer
endphoneme

