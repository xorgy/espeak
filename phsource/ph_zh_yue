//  Vowels and Diphtnongs
//====================================================



phoneme aa
  vowel starttype (a) endtype (a)
  length 230
  formants vowel/aa
endphoneme

phoneme aai
  vowel starttype (a) endtype (i)
  length 270
  formants vdiph/aai
endphoneme

phoneme aau
  vowel starttype (a) endtype (u)
  length 260
  formants vdiph/aau_2
endphoneme

phoneme aang
  vowel starttype (a) endtype (u)
  length 270
  formants vwl_zh/aang
endphoneme



