 
//====================================================
//  Tone Numbers
//====================================================


phoneme 1   //  tone: high level
  stress
  tone 50 30 envelope/p_fall NULL
endphoneme


phoneme 2   //  tone: rise
  stress
  tone 30 50 envelope/p_rise NULL
endphoneme


phoneme 3   //  tone: mid level
  stress
  tone 30 30 envelope/p_level NULL
endphoneme


phoneme 4   //  tone: low fall
  stress
  tone 20 10 envelope/p_fall NULL
endphoneme


phoneme 5   //  tone: low rise
  stress
  tone 10 30 envelope/p_rise NULL
endphoneme


phoneme 6   //  tone: low level
  stress
  tone 20 20 envelope/p_level NULL
endphoneme


//====================================================
//  Consonants
//====================================================


phoneme z  // [ts]
  vls alv afr sibilant
  vowelin f1=0  f2=1700 -300 300  f3=-100 80
  vowelout f1=0 f2=1700 -300 250  f3=-100 80  rms=20
  lengthmod 2
  wave ustop/ts
endphoneme


phoneme c  // [tS]
  vls pla afr sibilant
  vowelin f1=0  f2=2300 200 400  f3=-100 80
  lengthmod 2
  wave ustop/tsh
  before _ ustop/tsh_
  switchvoicing dZ
endphoneme


phoneme ng   // synonym for [N]
  vcd vel nasal
  starttype N  endtype N
  vowelout f1=3 f2=2300 300 400  f3=-200 80  len=40 rms=20 brk
  length 100
  formants NULL
  after _ nn/_nn
  before _ nn/nn_
  before (r) nn/nnj
  lengthmod 8            // longer than 'n'
endphoneme



