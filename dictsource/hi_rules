// Extra consonants

.group क़   // qa
        क़        qV
        क़ (B     q

.group ख़   // khha
        ख़        xV
        ख़ (B     x

.group ग़    // ghha
        ग़        QV
        ग़ (B     Q

.group ज़    // za
        ज़        zV
        ज़ (B     z

.group ड़    // dddha   (should retroflex flap)
        ड़        r.V
        ड़ (B     r.

.group ढ़    // rha  (aspirated version of dddha)
        ढ़        r.hV
        ढ़ (B     r.h

.group फ़    // fa
        फ़        fV
        फ़ (B     f

.group य़    // yya
        य़        jV
        य़ (B     j

.group ॠ    // rr
        ॠ        V-rr

.group ॡ    // ll
        ॡ        l-:     // long syllabic l


