imate    $u+
imaju    $u+

nemam    $u+      // to have, negative
nemaš    $u+
nema     $u+
nemamo   $u+
nemate   $u+
nemaju   $u+





// treat as letters if at the end of the clause
a        a    $atend    // letter-a
i        i    $atend    // letter-i
o        o    $atend    // letter-o
s        s@   $atend
u        u    $atend


// Exceptions
utf      u||te||ef


